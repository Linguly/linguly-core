@base_url = http://localhost:3001
@access_token = {{login.response.body.access_token}}

### User Authentication
### Login as a user
# @name login
POST {{base_url}}/login
Content-Type: application/json

{
    "email": "test@test.com",
    "password": "tes6aaa23"
}


### Sign up a new user
# @name login
POST {{base_url}}/signup
Content-Type: application/json

{
    "email": "test@test.com",
    "password": "tes6aaa23",
    "name": "Test User"
}

### Get user profile
GET {{base_url}}/user/me
Content-Type: application/json
Authorization: Bearer {{access_token}}


################## Agents Management

### Get all agents
GET {{base_url}}/agents
Content-Type: application/json
Authorization: Bearer {{access_token}}

### Get Agents filtered 
GET {{base_url}}/agents/filter?subcategories=add_to_learning_phrases&compatible_interfaces=telegram&categories=tool&categories=learning
Content-Type: application/json
Authorization: Bearer {{access_token}}

### Send a message to an agent
@agentId = 1_dictionary
POST {{base_url}}/agents/{{agentId}}/chat
Content-Type: application/json
Authorization: Bearer {{access_token}}

{
    "content": "Hello, agent!"
}


################## Goals Management

### Get all goals
GET {{base_url}}/goals
Content-Type: application/json
Authorization: Bearer {{access_token}}

### Create a new goal
POST {{base_url}}/goals
Content-Type: application/json
Authorization: Bearer {{access_token}}

{
    "language": "German",
    "level": "B2",
    "context": "General",
    "period": "months"
}

### Select a goal
@goalId = 6844a5ced421067ce832cb89
POST {{base_url}}/goals/{{goalId}}/select
Content-Type: application/json
Authorization: Bearer {{access_token}}

### Get selected goal
GET {{base_url}}/goals/selected
Content-Type: application/json
Authorization: Bearer {{access_token}}

### Get phrase packages for a goal
@goalId = 68e141064948cca9c11a9b02
GET {{base_url}}/goals/{{goalId}}/phrase_packages
Content-Type: application/json
Authorization: Bearer {{access_token}}

### Import a phrase package to a goal

@phrasePackageId = german_b2_general_generated_starter
POST {{base_url}}/goals/{{goalId}}/phrase_packages/{{phrasePackageId}}/import
Content-Type: application/json
Authorization: Bearer {{access_token}}
